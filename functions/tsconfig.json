{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
      "**/__tests__/**",
      "**/mocks/**",
      "**/**.d.ts"
  ]
}
